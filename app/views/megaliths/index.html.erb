<div class="row flex-column-reverse flex-lg-row">
  <div class="col-12 col-lg-8">
    <div class="ml-3 mt-3">
      <% unless @queryhash.nil? %>
        <h2>Sites near <%= @queryhash['name'] %> </h2>
      <% end %>
      <div class="search-bar">
      </div>
    </div>
    <div class="megalith-container m-3">
      <div class="index-cards-container">
        <% @megaliths.each do |megalith| %>
          <%= link_to megalith_path(megalith) do %>
            <%= render 'shared/card', megalith: megalith %>
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-4">
    <div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
