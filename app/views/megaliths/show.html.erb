<div class="container">
  <div id="carouselExampleControls" class="carousel slide" data-ride="false">
    <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @megalith.megalith_photos.first.photo.key, :class => "d-block w-100", crop: :fill %>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1600184894932-4f5c2f02b170?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1350&q=80" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1612165399085-3286b01404b0?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>

  <div class="container">
    <div class="title-elements mt-3">
      <div class="title-elements-left">
        <div class="title mt-3"><h1><%= @megalith.name %> </h1>
        </div>
        <div class="more-options-button">
          <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              +
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Make a trip', new_megalith_trip_path(@megalith), class:"dropdown-item" %>
              <a class="dropdown-item" href="#">Add to Trip</a>
              <a class="dropdown-item" href="#">Share this page üöÄ</a>
            </div>
          </div>
        </div>
      </div>
      <div class="favourites-star">
        ‚≠êÔ∏è
      </div>
    </div>

    <div class="subheading-elements mt-3">
      <div class="rating">
        <p>‚òÖ‚òÖ‚òÖ‚òÖ 4.59</p>
      </div>
      <div class="category">
        <h5><%= @megalith.category %></h5>
      </div>
    </div>

    <HR>

    <div class="description-text-box">
      <div class="tagline"><h4>Tagline: <%= @megalith.tagline %> </h4></div>
      <div class="Description"><p>Description: <%= @megalith.description %></p></div>
    </div>

    <div class="mb-3">
      <div id="map"
        style="width: 100%; height: 30vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

  <!-- tabs -->
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="comments-tab" data-toggle="tab" href="#comments" role="tab" aria-controls="comments" aria-selected="true">Comments</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Trips</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Other Places</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="comments" role="tabpanel" aria-labelledby="comments-tab">
        <!-- comments section -->
        <div class="container">
            <%= render partial: 'comments/form' %>
            <%= render partial: 'comments/comment', collection: @megalith.comments.reverse %>
        </div>
        <!-- comments section -->
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <!-- Placeholder for trip cards -->
        <% @megalith.trips.each do |trip| %>
          <%= render 'shared/trip_card', trip: trip %>
        <% end %>
        <!-- placeholder for trip cards -->
      </div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <div class="nearby-sites mt-3">
          <p>Nearby Sites:</p>
            <%= render 'shared/card', megalith: @megalith %>
        </div>
        <div class="nearby-pubs mt-3">
          <p>Nearby Pubs & Restaurants:</p>
          <!-- carousel of divs -->

          <!-- end of carousel -->
        </div>
        <div class="nearby-accomodation mt-3">
          <p>Nearby Accomodation:</p>
          <!-- carousel of divs -->

          <!-- end of carousel -->
        </div>
        <div id="showpage-map">
        <!-- insert map -->
        </div>
      </div>
    </div>


  </div>
</div>
