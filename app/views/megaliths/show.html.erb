<div class="container">
  <!-- top section -->
  <div class="show-page-top mt-5">
    <div class="show-page-text">
      <div class="title-elements mt-3">
        <div class="title mt-3"><h1><%= @megalith.name %> </h1>
        </div>
        <div class="title-elements-line-two">
          <div class="dropdown more-options-button">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">+</button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Make a trip', new_megalith_trip_path(@megalith), class:"dropdown-item" %>
              <a class="dropdown-item" href="#">Add to existing Trip</a>
              <a class="dropdown-item" href="#">Share this page ðŸš€</a>
            </div>
          </div>

          <div class="btn-group more-options-nav" role="group" aria-label="Basic example">
            <%= link_to 'Make a trip', new_megalith_trip_path(@megalith), type:"button", class:"btn btn-light" %>
            <!-- <button type="button" class="btn btn-light">Center</button> -->
            <button type="button" class="btn btn-light">Share <i class="far fa-share-square ml-1"></i></button>
          </div>

          <div class="favourites-icon topright">
            <label for="id-of-input" class="custom-checkbox">
              <input type="checkbox" id="id-of-input"/>
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-bookmark-plus" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5V6H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V7H6a.5.5 0 0 1 0-1h1.5V4.5A.5.5 0 0 1 8 4z"/>
                  <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z"/>
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-bookmark-plus-fill" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
                </svg>
            </label>
          </div>
        </div>
      </div>

      <div class="subheading-elements mt-3">
        <div class="rating">
          <p>â˜…<%= @megalith.average_rating %> </p>
        </div>
        <div class="category">
          <h5><%= @megalith.category %></h5>
        </div>
      </div>
      <HR> </HR>
      <div class="description-text-box">
        <div class="tagline"><h5><%= @megalith.tagline %> </h5></div>
        <div class="Description"><p><strong>Description:</strong> <br> <%= @megalith.description %></p></div>
      </div>
    </div>

    <div class="show-page-images">
      <div id="show-page-carousel" class="carousel slide" data-ride="false">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= cl_image_tag @megalith.megalith_photos.first.photo.key, :class => "d-block w-100", crop: :fill %>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://images.unsplash.com/photo-1600184894932-4f5c2f02b170?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1350&q=80" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://images.unsplash.com/photo-1612165399085-3286b01404b0?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#show-page-carousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#show-page-carousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <div class="upvote-overlay">
        <div class="photo-by">
          <p><small><em>Photo by:</em></small></p>
          <!-- the below should be inside an iteration for the photo and use megalith_photo.user.username -->
          <p>Brian LithLegend</p>
        </div>
        <div class="upvoting">
          <%= link_to megalith_photos_upvote_path(@megalith.megalith_photos.first), method: :post, remote: true do %>
          <i class="fas fa-angle-up"></i>
          <% end %>
          <!-- the below should be inside an iteration for the photo and use megalith_photo.get_likes.size -->
          <p><%= @megalith.megalith_photos.first.get_likes.size %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Map -->
  <div class="show-page-map">
    <div id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

  <!-- tabs -->
  <div class="show-page-tabs mt-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="comments-tab" data-toggle="tab" href="#comments" role="tab" aria-controls="comments" aria-selected="true">Comments</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="trips-tab" data-toggle="tab" href="#trips" role="tab" aria-controls="trips" aria-selected="false">Trips</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="nearby-tab" data-toggle="tab" href="#nearby" role="tab" aria-controls="nearby" aria-selected="false">Other Places</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="comments" role="tabpanel" aria-labelledby="comments-tab">
        <!-- comments section -->

        <div class="container" style="padding-bottom: 16px;">
          <div class="comment-form">
          <%= render partial: 'comments/form' %>
          </div>
          <%= render partial: 'comments/comment', collection: @megalith.comments.reverse %>
        </div>

        <!-- comments section -->
      </div>
      <div class="tab-pane fade" id="trips" role="tabpanel" aria-labelledby="trips-tab">
        <!-- Placeholder for trip cards -->
        <% if @trips[0] %>
          <% @trips.each do |trip| %>
            <%= render 'shared/trip_card', trip: trip, redirect: @megalith, redirect_type: 'megalith' %>
          <% end %>
        <% else %>
          <%= link_to new_megalith_trip_path(@megalith) do %>
            <h2 class="text-center mt-3">Be the first to add a trip</h2>
          <% end %>
        <% end %>
        <!-- placeholder for trip cards -->
      </div>
      <div class="tab-pane fade" id="nearby" role="tabpanel" aria-labelledby="nearby-tab">
        <div class="nearby-sites mt-3">
          <p>Nearby Sites:</p>
            <%= render 'shared/card', megalith: @megalith %>
        </div>
        <div class="nearby-pubs mt-3">
          <p>Nearby Pubs & Restaurants:</p>
          <!-- carousel of divs -->

          <!-- end of carousel -->
        </div>
        <div class="nearby-accomodation mt-3">
          <p>Nearby Accomodation:</p>
          <!-- carousel of divs -->

          <!-- end of carousel -->
        </div>
        <div id="showpage-map">
        <!-- insert map -->
        </div>
      </div>
    </div>
  </div>

</div>
