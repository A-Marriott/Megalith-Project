<div class="container mt-3">
  <h2>Top Sites</h2>
  <div class="most-visited-container">
    <% @megaliths.first(3).each do |megalith| %>
      <%= link_to megalith_path(megalith) do %>
        <%= render 'shared/card', megalith: megalith %>
      <%end%>
    <%end%>
    <div class="collapse" id="collapseExample">
      <% @megaliths.last(7).each do |megalith| %>
        <%= link_to megalith_path(megalith) do %>
          <%= render 'shared/card', megalith: megalith %>
        <%end%>
      <%end%>
    </div>
  </div>
  <a class="btn btn-outline-secondary mt-3" id="view-more" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">View More</a>
</div>



<div class="container mt-3">
  <h2>Most popular trips</h2>
  <div id="popular-trips" class="most-visited-container">
    <% Trip.all.first(3).each do |trip| %>
        <%= render 'shared/trip_card', trip: trip, redirect: '_', redirect_type: 'home' %>
    <%end%>
  </div>
</div>

