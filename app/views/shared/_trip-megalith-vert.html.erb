<div class="megalith-vert">
  <div class="trip-megalith-vert-image-container">
    <% if megalith.megalith_photos.first.photo.attached? %>
    <%= cl_image_tag megalith.megalith_photos.first.photo.key, alt: megalith.name %>
    <% else %>
    <%= cl_image_tag megalith.megalith_photos.first.photo_key, alt: megalith.name %>
    <% end %>
  </div>
  <div class="megalith-info">
    <p><strong><%= megalith.name %></strong></p>
    <p><small><%= megalith.category %></small></p>
  </div>
  <div class="buttons-on-bottom">
    <% if button == 'add' %>
      <%= link_to "Add to trip", trip_megaliths_path(megalith: megalith, trip: trip), method: :post, remote: true, class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  </div>
</div>

