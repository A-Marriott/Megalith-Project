<%= simple_form_for [ @megalith, @trip ] do |f| %>
  <%= f.input :name %>
  <%= f.input :tagline %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
<%= form_tag users_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Invite others"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
