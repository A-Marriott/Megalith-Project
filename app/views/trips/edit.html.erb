<div class="container mt-5">
  <h1>Edit trip</h1>
  <div class="trip-edit-form">
    <%= simple_form_for @trip do |f| %>
      <%= f.input :name %>
      <%= f.input :tagline %>
      <%= f.input :description %>
      <%= f.association :megaliths, as: :check_boxes, collection: Megalith.where.not(id: @megalith.id), label: "Does your trip include other megaliths?" %>
      <%= f.button :submit %>
    <% end %>
  </div>

  <div class="trip-megaliths">
    <div class="current-trip-megaliths">
      <% @trip_megaliths.each do |trip_megalith| %>
        <p><%= trip_megalith.megalith.name %></p>
      <% end %>
    </div>
  </div>

  <div class="trip-users">
    <div class="current-trip-users">
      <% @trip_users.each do |tripper| %>
        <%= render 'shared/user_card', user: tripper, button: 'delete', trip: @trip %>
      <% end %>
    </div>

    <div class="trip-user-search">
      <%= form_tag edit_trip_path(@trip), method: :get, class: "d-flex", remote: true do %>
        <%= text_field_tag :user_query,
          params[:user_query],
          class: "form-control",
          placeholder: "Invite others"
        %>
        <%= hidden_field_tag 'trip_id', @trip.id.to_s %>
        <%= submit_tag "Search", class: "btn btn-outline-secondary ml-2" %>
      <% end %>
    </div>

    <div class="trip-user-search-results">
    </div>
  </div>

  <div class="megalith-photos">
  </div>

</div>
